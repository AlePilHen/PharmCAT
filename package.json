{
  "name": "pharmcat",
  "version": "2.1.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/PharmGKB/PharmCAT.git"
  },
  "private": true,
  "devDependencies": {
    "@google/semantic-release-replace-plugin": "^1.1.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "semantic-release": "^19.0.5"
  },
  "release": {
    "branches": [
      {
        "name": "development"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      [
        "@google/semantic-release-replace-plugin",
        {
          "replacements": [
            {
              "files": [
                "src/scripts/preprocessor/utilities.py"
              ],
              "from": "^PHARMCAT_VERSION = .*",
              "to": "PHARMCAT_VERSION = '${nextRelease.version}'",
              "results": [
                {
                  "file": "src/scripts/preprocessor/utilities.py",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            }
          ]
        }
      ],
      [
        "@google/semantic-release-replace-plugin",
        {
          "replacements": [
            {
              "files": [
                "docs/index.md"
              ],
              "from": "^pharmcat_version: .*",
              "to": "pharmcat_version: ${nextRelease.version}",
              "results": [
                {
                  "file": "docs/index.md",
                  "hasChanged": true,
                  "numMatches": 1,
                  "numReplacements": 1
                }
              ],
              "countMatches": true
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "writerOpts": {
            "commitsGroupSort": [
              "feat",
              "perf",
              "fix"
            ],
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "feature",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Improvements"
              },
              {
                "type": "perf",
                "section": "Improvements"
              }
            ],
            "commitsSort": "header"
          }
        }
      ],
      "@semantic-release/changelog",
      "@semantic-release/github",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "docs/index.md",
            "package.json",
            "src/scripts/preprocessor/utilities.py"
          ]
        }
      ]
    ],
    "ci": false
  },
  "scripts": {
    "release": "semantic-release"
  }
}
